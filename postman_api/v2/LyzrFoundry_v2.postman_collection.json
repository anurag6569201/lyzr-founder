						"method": "POST",
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test.user@example.com\",\n  \"password\": \"LyzrTest_12345\",\n  \"full_name\": \"Test User\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": "{{base_url}}/auth/register/"
					},
					"response": [
						{
							"name": "Success - OTP Sent",
							"originalRequest": {
								"method": "POST",
								"body": {
									"mode": "raw",
									"raw": "{\n  \"email\": \"test.user@example.com\",\n  \"password\": \"LyzrTest_12345\",\n  \"full_name\": \"Test User\"\n}",
									"options": {
										"raw": {
											"language": "json"
										}
									}
								},
								"url": "{{base_url}}/auth/register/"
							},
							"status": "OK",
							"code": 200,
