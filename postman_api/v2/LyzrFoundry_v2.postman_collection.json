						}
					]
				},
				{
					"name": "2. Verify OTP",
					"request": {
						"method": "POST",
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test.user@example.com\",\n    \"otp\": \"123456\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": "{{base_url}}/auth/verify-otp/"
					},
					"response": [
						{
							"name": "Success - Account Created",
							"originalRequest": {
								"method": "POST",
								"body": {
									"mode": "raw",
									"raw": "{\n    \"email\": \"test.user@example.com\",\n    \"otp\": \"123456\"\n}",
									"options": {
										"raw": {
											"language": "json"
										}
									}
								},
								"url": "{{base_url}}/auth/verify-otp/"
